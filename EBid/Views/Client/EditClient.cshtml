@model EBid.Models.Client

@{
    ViewData["Title"] = "EditClient";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h3>Edit Client Details</h3>
<hr />
<form enctype="multipart/form-data" method="post" class="w-75 m-auto">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="ClientId" />
    <input type="hidden" asp-for="BinaryPhoto" />
    <input type="hidden" asp-for="PhotoName" />
    <input type="hidden" asp-for="PhotoUrl" />
    <div class="row my-3">
        <div class="form-group col-sm">
            <label asp-for="FirstName" class="control-label"></label>
            <input asp-for="FirstName" class="form-control" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group col-sm">
            <label asp-for="MiddleName" class="control-label"></label>
            <input asp-for="MiddleName" class="form-control" />
            <span asp-validation-for="MiddleName" class="text-danger"></span>
        </div>
        <div class="form-group col-sm">
            <label asp-for="LastName" class="control-label"></label>
            <input asp-for="LastName" class="form-control" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>
    </div>
    <div class="row my-3">
        <div class="form-group col-sm">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group col-sm">
            <label asp-for="Phone" class="control-label"></label>
            <input asp-for="Phone" class="form-control" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
        <div class="form-group col-sm">
            <label for="clientPhoto" class="control-label">Photo</label>
            <input type="file" name="clientPhoto" id="clientPhoto" accept="Image/*" class="form-control" />
        </div>
    </div>
    <h4 class="mt-lg-5 bi bi-house-door-fill"> Address</h4>
    <hr />
    <div class="row my-3">
            <div class="form-group col-sm">
                <label asp-for="Line1" class="control-label"></label>
                <input asp-for="Line1" class="form-control" />
                <span asp-validation-for="Line1" class="text-danger"></span>
            </div>
            <div class="form-group col-sm">
                <label asp-for="Line2" class="control-label"></label>
                <input asp-for="Line2" class="form-control" />
                <span asp-validation-for="Line2" class="text-danger"></span>
            </div>
            <div class="form-group col-sm">
                <label asp-for="Landmark" class="control-label"></label>
                <input asp-for="Landmark" class="form-control" />
                <span asp-validation-for="Landmark" class="text-danger"></span>
            </div>
    </div>
    <div class="row my-3">
            <div class="form-group col-sm">
                <label asp-for="City" class="control-label"></label>
                <input asp-for="City" class="form-control" />
                <span asp-validation-for="City" class="text-danger"></span>
            </div>
            <div class="form-group col-sm">
                <label asp-for="State" class="control-label"></label>
                <input asp-for="State" class="form-control" />
                <span asp-validation-for="State" class="text-danger"></span>
            </div>
            <div class="form-group col-sm">
                <label asp-for="Country" class="control-label"></label>
                <input asp-for="Country" class="form-control" />
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
            <div class="form-group col-sm">
                <label asp-for="PostalCode" class="control-label"></label>
                <input asp-for="PostalCode" class="form-control" />
                <span asp-validation-for="PostalCode" class="text-danger"></span>
            </div>
    </div>
    <h4 class="mt-lg-5 bi bi-bank2"> Bank Account Details</h4>
    <hr />
    <div class="row my-3">
        <div class="form-group col-sm">
            <label asp-for="BankAccount.AccountNo" class="control-label"></label>
            <input asp-for="BankAccount.AccountNo" class="form-control" />
            <span asp-validation-for="BankAccount.AccountNo" class="text-danger"></span>
        </div>
        <div class="form-group col-sm">
            <label asp-for="BankAccount.BankName" class="control-label"></label>
            <input asp-for="BankAccount.BankName" class="form-control" />
            <span asp-validation-for="BankAccount.BankName" class="text-danger"></span>
        </div>
        <div class="form-group col-sm">
            <label asp-for="BankAccount.IFSCode" class="control-label"></label>
            <input asp-for="BankAccount.IFSCode" class="form-control" />
            <span asp-validation-for="BankAccount.IFSCode" class="text-danger"></span>
        </div>
    </div>
    <div class="row my-3">
        <div class="form-group col-sm d-flex justify-content-end">
            <input type="submit" value="Update" class="px-5 btn btn-primary" />
        </div>
    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
