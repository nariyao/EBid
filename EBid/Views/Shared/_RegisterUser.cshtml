@model UserModal;

<h4>Register User</h4>
<hr />

<form asp-action="RegisterUser" enctype="application/json">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group mb-3  mb-3">
        <label asp-for="UserName" class="control-label"></label>
        <input asp-for="UserName" class="form-control" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <div class="form-group mb-3 ">
        <label asp-for="Phone" class="control-label"></label>
        <input asp-for="Phone" class="form-control" value=@ViewBag.customer.Phone readonly />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>
    <div class="form-group mb-3 ">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control" value=@ViewBag.customer.Email readonly />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    @if (User.IsInRole("Admin"))
    {
    <div class="form-group mb-3 form-switch">
        <label class="form-check-label">
            <input class="form-check-input" asp-for="IsEmailConfirmed" /> @Html.DisplayNameFor(model => model.IsEmailConfirmed)
        </label>
    </div>
    <div class="form-group mb-3 form-switch">
        <label class="form-check-label">
            <input class="form-check-input" asp-for="IsAdmin" /> @Html.DisplayNameFor(model => model.IsAdmin)
        </label>
    </div>
    }
    <div class="form-group mb-3 ">
        <label asp-for="Password" class="control-label"></label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group mb-3 ">
        <label asp-for="ConfirmPassword" class="control-label"></label>
        <input asp-for="ConfirmPassword" class="form-control" />
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <div class="form-group mb-3 d-flex justify-content-end gap-3">
        <input type="submit" value="Register" class="btn btn-primary px-4" />
        <input type="reset" value="Clear" class="btn btn-secondary px-4" />
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
