@model EBid.Models.Customer

@{
    ViewData["Title"] = "Display Client Details";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h3 class="bi bi-person-fill"> Customer personal details</h3>
<hr />
<div class="fs-5 d-flex justify-content-between">
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MiddleName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MiddleName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastModifiedDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastModifiedDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsDeleted)
        </dt>
        <dd class="col-sm-10 @((@Model.IsDeleted)?"text-danger":"text-primary")">
            @Model.IsDeleted
        </dd>
    </dl>
    <div>
        <div class="bg-secondary border border-4 border-dark" style="width:200px;">
            <img src=@Model.PhotoUrl alt=@Model.PhotoName class="w-100" />
        </div>
    </div>
</div>
<hr />
<h3 class="bi bi-house-door-fill"> Address</h3>
<hr />
<div class="fs-5">
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Line1)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Line1)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Line2)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Line2)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Landmark)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Landmark)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.City)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.State)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.State)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Country)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Country)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PostalCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PostalCode)
        </dd>
    </dl>
</div>
<hr />
<div class="d-flex gap-3 justify-content-end">
    <a asp-action="EditCustomer" asp-route-ClientId="@Model?.CustomerId" class="px-4 btn btn-lg btn-warning">Edit</a>
    <a asp-action="ListCustomers" asp-route-isDeleted="false" class="btn btn-lg btn-secondary px-4">Back to List</a>
</div>
